<h1 class="section__title"><%= 'конструктор' %></h1>

<%= form_with(model: @route, local: true) do |form| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
        <% @route.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if form.object.new_record? %>
    <div class="field">
      <%= form.label 'Файл трека (gpx, kml)' %>
      <%= form.file_field :track %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>

  <p>или <%= link_to 'Создать маршрут с нуля', new_route_path(@route) %></p>
<% end %>
