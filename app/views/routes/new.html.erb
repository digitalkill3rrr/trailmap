<div class="wrapper">
  <div class="route-page__wrapper">
    <div class="route-container">
      <div class="route-header">
        <h2><%= 'Новый маршрут' %></h2>
      </div>

      <%= form_with(model: @route, local: true) do |form| %>
        <% if @route.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

            <ul>
              <% @route.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="route-name">
          <%= form.label 'Название маршрута' %>
          <%= form.text_field :title %>
        </div>

        <% if form.object.new_record? %>
          <div class="file-upload">
            <%= form.label 'Файл' %>
            <%= form.file_field :track %>
          </div>
        <% end %>

        <div class="route-new">
          <%= form.submit 'Создать маршрут' %>
        </div>
      <% end %>

      <%= link_to 'Back', request.referer %>
    </div>
  </div>
</div>
