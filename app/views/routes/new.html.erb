<h1 class="section__title"><%= 'Новый маршрут' %></h1>

<%= form_with(model: @route, local: true) do |form| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
        <% @route.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'Название маршрута' %>
    <%= form.text_field :title %>
  </div>

  <% if form.object.new_record? %>
    <div class="field">
      <%= form.label 'Файл' %>
      <%= form.file_field :track %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', request.referer %>
