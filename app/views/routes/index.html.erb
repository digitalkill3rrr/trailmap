<div class="wrapper">

  <h1 class="section__title">популярные маршруты</h1>

  <div class="route-list__wrapper">
    <% @routes.each do |route| %>
      <div class="route-card">
        <div id="h4"><%= link_to route.title, route %></div>

        <div class="route-info-wrapper--inner-small">
          <div id="body-m" class="info-container--small"><%= number_to_human(route.distance, units: :distance) %></div>
          <div id="body-m" class="info-container--small"><%= route.difficulty %></div>
          <div id="body-m" class="info-container--small"><%= route.kind %></div>
        </div>

        <div class="route-pic">
          <% if route.cover.present? %>
            <%= image_tag route.cover.url %>
          <% end %>
        </div>
      </div>

    <% end %>
  </div>

</div>
