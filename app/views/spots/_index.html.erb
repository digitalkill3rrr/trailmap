<h1>Spots</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Route</th>
      <th>Coordinates</th>
      <th>Tags</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @spots.each do |spot| %>
      <tr>
        <td><%= link_to spot.name, spot %></td>
        <td><%= spot.description %></td>
        <td><%= spot.route.title %></td>
        <td>
          <%= spot.longitude %>
          <%= spot.latitude %>
        </td>
        <td>
          <% spot.tag_list.each do |tag| %>
            <%= link_to tag, tagged_path(tag: tag) %>
          <% end %>
        </td>

        <% if can? :update, Spot %>
          <td><%= link_to 'Edit', edit_spot_path(spot) %></td>
        <% end %>

        <% if can? :destroy, Spot %>
          <td><%= link_to 'Destroy', spot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<% if can? :create, Spot %>
  <%= link_to 'New Spot', new_spot_path %>
<% end %>
