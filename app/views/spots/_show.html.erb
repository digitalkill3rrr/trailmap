<div class="spot-block__wrapper">

  <div class="spot-info-container">
    <div id="label-s--bold"><%= spot.status %></div>
    <div id="body-l"><%= link_to spot.name, spot %></div>
    <div id="body-m--bold"><%= spot.user.nickname %></div>
  </div>

  <div class="spot-image--small">

    <!-- show only first image -->
    <% spot.spot_images.each_with_index do |image, i| %>
      <%= image_tag image.image.url if i==0 %>
    <% end %>
  </div>
</div>
