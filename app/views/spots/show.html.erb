<div class="spot_info">
  <div class="spot_images">
    <% @spot.spot_images.each do |image| %>
      <%= image_tag image.image.url %>
    <% end %>
  </div>

  <h2><%= @spot.name %></h2>
  <p><%= @spot.status %></p>
  <p><%#= @spot.route.title %></p>
  <p><%= User.find(@spot.user_id).nickname %></p>
  <p><%= @spot.description %></p>
  <p>
    <%= @spot.longitude %>
    <%= @spot.latitude %>
  </p>

</div>

<p>
  <%#= @spot.tag_list %>
  <% @spot.tag_list.each do |tag| %>
    <%= link_to tag, tagged_path(tag: tag) %>
  <% end %>
</p>

<% if can? :update, Spot %>
  <%= link_to 'Edit', edit_spot_path(@spot) %>
<% end %>
<%= link_to 'Back', spots_path %>
