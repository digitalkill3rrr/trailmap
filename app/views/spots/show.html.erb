<div class="spot-block__wrapper--show">
  <div class="spot-image--big">
    <% @spot.spot_images.each do |image| %>
    <%= image_tag image.image.url %>
    <% end %>
  </div>


  <div class="spot-info-container--show">
    <div class="spot-heading--show">
      <div id="label-s--bold"><%= @spot.status %></div>
      <div id="body-m--bold"><%= User.find(@spot.user_id).nickname %></div>
    </div>
    <div id="h3"><%= @spot.name %></div>
    <div id="body-l--bold"><%= @spot.route.title %></div>
    <div id="body-l"><%= @spot.description %></div>
  </div>

  <div d="body-s--bold" class="tag-list">
    <% @spot.tag_list.each do |tag| %>
      <%= link_to tag, tagged_path(tag: tag) %>
    <% end %>
  </div>
</div>

<div id="body-m--bold" class="button-primary--back"><%= link_to 'Вернуться назад', request.referer %>
