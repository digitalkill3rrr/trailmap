<p id="notice"><%= notice %></p>

<h1>Collections</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= link_to collection.title, collection %></td>
        <td><%= collection.description %></td>

        <% if can? :update, Collection %>
          <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
        <% end %>

        <% if can? :destroy, Collection %>
          <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Collection %>
  <%= link_to 'New Collection', new_collection_path %>
<% end %>
