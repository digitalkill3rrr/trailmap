<div class="wrapper">
<div class="profile-header">
  <h3>Список пользователей</h3>
  <div><%= link_to 'Отправить инвайт', new_user_invitation_path %></div>
</div>

  <div>
    <h4>Invited users</h4>
    <% @users.each do |user| %>
      <% if user.invitation_token.present? %>
        <div>email: <%= user.email %></div>
        <div>nickname: <%= user.nickname %></div>
        <div>banned: <%= user.banned %></div>
        <div>role: <%= user.role %></div>
        <div>invitation token: <%= user.invitation_token %></div><br>
      <% end %>
    <% end %>
  </div>

  <div>
    <h4>Other users</h4>
    <% @users.each do |user| %>
      <% if user.invitation_token.nil? %>
        <div>email: <%= user.email %></div>
        <div>nickname: <%= user.nickname %></div>
        <div>banned: <%= user.banned %></div>
        <div>role: <%= user.role %></div><br>
        <div>invitation token: <%= user.invitation_token %></div><br>
        <% end %>
    <% end %>
  </div>
</div>
